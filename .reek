Attribute:
  enabled: false
DuplicateMethodCall:
  exclude:
    - UserFlashUpdater
    - Users::PhoneConfirmationController
FeatureEnvy:
  exclude:
    - track_registration
    - append_info_to_payload
    - generate_slo_request
IrresponsibleModule:
  enabled: false
NilCheck:
  exclude:
    - Users::PhoneConfirmationController
    - slo_not_implemented_at_sp?
    - in_slo?
TooManyStatements:
  max_statements: 6
TooManyMethods:
  exclude:
    - Devise::TwoFactorAuthenticationController
    - Users::ConfirmationsController
    - ServiceProvider
UncommunicativeMethodName:
  exclude:
    - Users::PhoneConfirmationController
    - render_401
UnusedPrivateMethod:
  exclude:
    - ApplicationController
    - ActiveJob::Logging::LogSubscriber
    - SamlIdpController
    - Users::PhoneConfirmationController
    - UpdateUserProfileForm
UtilityFunction:
  public_methods_only: true
  exclude:
    - AnalyticsEventJob#perform
    - SmsSenderConfirmationJob

exclude_paths:
  - db/migrate
  - spec/**/*
