Attribute:
  enabled: false
FeatureEnvy:
  exclude:
    - 'track_registration'
DuplicateMethodCall:
  exclude:
    - UserFlashUpdater
    - Users::PhoneConfirmationController
IrresponsibleModule:
  enabled: false
NilCheck:
  exclude:
    - Users::PhoneConfirmationController
TooManyStatements:
  max_statements: 6
TooManyMethods:
  exclude:
    - Devise::TwoFactorAuthenticationController
    - Users::ConfirmationsController
    - ServiceProvider
UncommunicativeMethodName:
  exclude:
    - Users::PhoneConfirmationController
UnusedPrivateMethod:
  exclude:
    - ApplicationController
    - ActiveJob::Logging::LogSubscriber
    - Users::PhoneConfirmationController
    - UpdateUserProfileForm
UtilityFunction:
  public_methods_only: true
  exclude:
    - AnalyticsEventJob#perform
    - SmsSenderConfirmationJob
exclude_paths:
  - db/migrate
  - spec/**/*
