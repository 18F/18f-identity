<h1>Information about you</h1>

<%= simple_form_for(
  Px::BasicInfoForm.new,
  url: px_verify_step_path(:basic_info),
  method: :put,
) do |f| %>
  <%= f.input :first_name, label: 'First name', required: true %>
  <%= f.input :last_name, label: 'Last name', required: true %>
  <%=
    f.input(
      :dob,
      as: :tel,
      label: 'Birth date',
      required: true,
      hint: 'example: 01/17/1964',
      hint_html: { id: 'dob-instructs', class: 'mb1' },
      pattern: '(0[1-9]|1[012])/(0[1-9]|1[0-9]|2[0-9]|3[01])/[0-9]{4}',
      input_html: { class: 'dob', 'aria-describedby': 'dob-instructs' }
    )
  %>
  <%=
    f.input(
      :ssn,
      label: 'Social security number',
      required: true,
      pattern: '^\d{3}-?\d{2}-?\d{4}$',
      input_html: { class: 'ssn' }
    )
  %>

  <h4>Current address</h4>

  <%=
    f.input(
      :address1,
      label: 'Address line 1',
      wrapper_html: { class: 'mb1' },
      required: true,
      maxlength: 255
    )
  %>
  <%= f.input :address2, label: 'Address line 2', maxlength: 255 %>
  <%= f.input :city, label: 'City', required: true, maxlength: 255 %>

  <div class='clearfix mxn1'>
    <div class='sm-col cm-col-8 px1'>
      <%=
        f.input(
          :state,
          collection: us_states_territories,
          label: 'State',
          required: true,
          prompt: '- Select -'
        )
      %>
    </div>
    <div class='sm-col cm-col-4 px1'>
      <%=
        f.input(
          :zipcode,
          as: :tel,
          label: 'Zipcode',
          required: true,
          pattern: '(\d{5}([\-]\d{4})?)',
          input_html: { class: 'zipcode' },
        )
      %>
    </div>
  </div>

  <%= f.submit 'Continue', class: 'mt3 btn btn-primary btn-wide' %>
<% end %>
