<% title t('titles.confirmations.new') %>

<h1 class='h3 my0'>
  <%= t('headings.confirmations.new') %>
</h1>
<%= simple_form_for(@resend_email_confirmation_form,
                    url: sign_up_register_path,
                    html: { autocomplete: 'off', method: :post, role: 'form' }) do |f| %>
  <%= f.input :email, required: true %>
  <%= f.input :request_id, as: :hidden %>
  <%= f.button :submit, t('forms.buttons.resend_confirmation'), class: 'mt2 mb1' %>
<% end %>
