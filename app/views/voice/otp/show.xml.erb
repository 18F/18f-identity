<?xml version="1.0" encoding="utf-8"?>
<Response>
  <Say language="<%= I18n.locale %>">
    <%= @message %>
  </Say>
  <% if @action_url %>
    <Gather numDigits="1" action="<%= @action_url %>">
      <Say language="<%= I18n.locale %>">
        <%= t('voice.otp.repeat_instructions') %>
      </Say>
    </Gather>
  <% end %>
  <Hangup />
</Response>
