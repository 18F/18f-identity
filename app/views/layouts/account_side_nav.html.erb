<% content_for(:nav) do %>
  <%= render 'accounts/nav_auth', enable_mobile_nav: true, greeting: @view_model.header_personalization %>
<% end %>

<% content_for :content do %>
  <div class='grid-row grid-gap mb3'>
    <div class="desktop:grid-offset-3 desktop:grid-col-3">
      <%= image_tag(
        asset_path('user-access.svg'),
        alt: '',
      ) %>
    </div>
    <div class="desktop:grid-col-5">
      <div>
        Access your government benefits and services from your login.gov account.
      </div>
      <div>
        <%= link_to 'Learn more about login.gov', MarketingSite.base_url %>
      </div>
    </div>
  </div>
  <div class='grid-row grid-gap'>
    <div class="desktop:grid-col-4">
      <%= render 'accounts/side_nav' %>
    </div>
    <div class='desktop:grid-col-8'>
      <%= yield %>
    </div>
  </div>
<% end %>

<%= render 'accounts/mobile_nav' %>
<%= render template: 'layouts/base', locals: { disable_card: true } %>
