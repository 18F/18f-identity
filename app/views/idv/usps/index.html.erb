<div class="margin-top-neg-2">
  <%= image_tag asset_url('check-email.svg'), alt: '', width: 24, class: 'left-0 right-0 ico-heading' %>
  <h1 class="margin-top-2 margin-left-1 h3 ico-heading"><%= @presenter.title %></h1>
</div>

<p>
  <%= @presenter.byline %>
  <strong><%= t('idv.messages.usps.success') %></strong>
</p>

<div class="margin-top-6 margin-bottom-4">
  <% if @presenter.usps_mail_bounced? %>
    <%= render 'idv/usps/new_address', presenter: @presenter %>
  <% else %>
    <%= render 'idv/usps/address_on_file', presenter: @presenter %>
  <% end %>
</div>

<%= render 'idv/doc_auth/back', fallback_path: @presenter.fallback_back_path %>
