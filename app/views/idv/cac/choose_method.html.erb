<% title t('doc_auth.titles.doc_auth') %>

<%= render 'shared/maintenance_window_alert' do %>
  <h1 class="h3 margin-top-0 margin-bottom-1"><%= t('cac_proofing.headings.choose_method') %></h1>
  <p><%= t('cac_proofing.info.choose_method') %></p>
  <p><%= t('cac_proofing.info.disclaimer') %></p>
  <div class="grid-row margin-y-4">
    <div class="mobile-lg:grid-col-4 margin-bottom-2">
      <%= image_tag asset_url('piv-cac-round.svg') %>
    </div>
    <div class="mobile-lg:grid-col-8">
      <div class='usa-tag caps text-ink bg-primary-lighter margin-bottom-2 display-inline-block'>
        <%= t('doc_auth.info.tag') %>
      </div>
      <p><%= t('cac_proofing.info.piv_cac_description') %></p>
      <%= validated_form_for :cac,
                             url: url_for,
                             method: 'put',
                             html: {autocomplete: 'off', role: 'form', class: 'margin-top-2'} do |f| %>
        <button class="btn btn-primary text-center" type="submit">
          <%= t('cac_proofing.buttons.use_cac') %>
        </button>
      <% end %>
    </div>
  </div>
  <hr/>
  <div class="grid-row margin-top-3">
    <div class="mobile-lg:grid-col-4 margin-bottom-2">
      <%= image_tag asset_url('state-id-round.svg') %>
    </div>
    <div class="mobile-lg:grid-col-8">
      <p><%= t('cac_proofing.info.state_id_description') %></p>
      <%= link_to t('cac_proofing.buttons.use_doc_auth'), idv_doc_auth_path, class: 'btn btn-primary text-center' %>
    </div>
  </div>
  <div class="mt3 pt1 border-top"><%= link_to t('links.cancel'), idv_cancel_path %></div>
<% end %>
