<%= render 'shared/alert', {
  type: 'error',
  class: 'margin-bottom-4',
  message: @presenter.title,
} %>

<h1 class="h3 margin-y-0">
  <%= @presenter.heading %>
</h1>

<p class="mt-tiny margin-bottom-4">
  <%= @presenter.description %>
</p>

<% link = account_path %>

<% cancel = sign_up_or_idv_no_js_link || link %>

<div class="margin-top-2 padding-top-1 border-top">
  <%= link_to t('forms.piv_cac_setup.choose_different_certificate'),
              setup_piv_cac_url, class: 'h5' %>
  <br/>
  <% if user_signing_up? || user_verifying_identity? %>
    <% method = user_signing_up? ? :delete : :get %>

    <%= button_to cancel_link_text, cancel, method: method,
                  class: 'btn btn-link', id: 'auth-flow-cancel' %>
    <%= render 'shared/cancel_action_modal',
               idv: user_verifying_identity?,
               user_signing_up: user_signing_up? %>
  <% else %>
    <%= link_to cancel_link_text, cancel, class: 'h5' %>
  <% end %>
</div>
